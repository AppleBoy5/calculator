#include <stdio.h>

int main()
{

    int a,b;
    char choice;
    printf("Hi! welcome to the long overdue disappointment \n");
    printf("Below are four choices on how to manipulate the two numbers which you'll input \n\n");
    printf("1.+\n2.-\n3.*\n4./\n");
    printf("Please Pick which option best suits your needs: ");
    scanf("%d", &choice);
    printf("Number 1: ");
    scanf("%d", &a);
    printf("Number 2: ");
    scanf("%d", &b);

    switch (choice)
    {
    case 1:
        printf("%d + %d = %d", a,b, a+b);
        break;
    case 2:
        printf("%d - %d = %d", a,b, a-b);
        break;
    case 3:
        printf("%d * %d = %d", a,b, a*b);
        break;
    case 4:
        printf("%d / %d = %d", a,b, a/b);
        break;
    }




    return 0;


}
